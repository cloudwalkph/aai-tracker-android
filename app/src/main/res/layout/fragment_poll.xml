<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        android:weightSum="1"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="400px"
                android:layout_height="400px"
                app:srcCompat="@drawable/camera"
                android:id="@+id/picture"
                android:layout_gravity="center"/>

            <TextView
                android:text="Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="25dp" />

            <org.apmem.tools.layouts.FlowLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:f="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                f:weightDefault="1.0"
                f:layoutDirection="ltr"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:text="Male"
                    android:id="@+id/genderMale"
                    android:background="@color/medix_gray"
                    android:layout_margin="10dp" />
                <Button
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:text="Female"
                    android:id="@+id/genderFemale"
                    android:background="@color/medix_gray"
                    android:layout_margin="10dp" />

            </org.apmem.tools.layouts.FlowLayout>



            <TextView
                android:text="Age group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="25dp" />

            <org.apmem.tools.layouts.FlowLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:f="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                f:weightDefault="1.0"
                f:layoutDirection="ltr"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:text="15 - 20"
                    android:id="@+id/age1520"
                    android:background="@color/medix_gray"
                    android:layout_margin="10dp" />
                <Button
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:text="21 - 25"
                    android:id="@+id/age2125"
                    android:background="@color/medix_gray"
                    android:layout_margin="10dp" />
                <Button
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:text="26 - 30"
                    android:id="@+id/age2630"
                    android:background="@color/medix_gray"
                    android:layout_margin="10dp" />
                <Button
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:text="31 - 35"
                    android:id="@+id/age3135"
                    android:background="@color/medix_gray"
                    android:layout_margin="10dp" />

            </org.apmem.tools.layouts.FlowLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:background="@drawable/generic_bottom_button_blue"
        android:padding="30dp"
        android:textColor="@color/medix_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saveAnswer"
        android:id="@+id/saveAnswer"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:textSize="25dp" />

</RelativeLayout>