<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        android:weightSum="1"
        android:background="#ffffff">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="50dp">

            <ImageView
                android:layout_width="250px"
                app:srcCompat="@drawable/camera"
                android:id="@+id/picture"
                android:layout_height="250px" />



            <TextView
                android:text="Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/genderMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/genderFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />

            </RadioGroup>



            <TextView
                android:text="Age group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />



            <RadioGroup
                android:id="@+id/ageGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/age1520"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 - 20"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/age2125"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 - 25" />

                <RadioButton
                    android:id="@+id/age2630"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26 - 30" />

                <RadioButton
                    android:id="@+id/age3135"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31 - 35" />

            </RadioGroup>

        </TableLayout>
    </LinearLayout>

    <Button
        android:background="@drawable/generic_bottom_button_blue"
        android:padding="30dp"
        android:textColor="@color/medix_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_answer"
        android:id="@+id/saveAnswer"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:textSize="25dp" />

</RelativeLayout>